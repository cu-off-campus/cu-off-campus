<% if flash[:notice] %>
  <div class="message is-info" id="notice">
    <div class="message-body">
      <%= flash[:notice] %>
    </div>
  </div>
<% elsif flash[:warning] %>
  <div class="message is-danger" role="alert" id="warning">
    <div class="message-body">
      <%= flash[:warning] %>
    </div>
  </div>
<% end %>
